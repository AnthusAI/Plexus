{
  "name": "items-metrics-calculator",
  "version": "1.0.0",
  "description": "Lambda function for calculating items and score results metrics",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "aws-lambda": "^1.0.7",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@babel/core": "^7.27.4",
    "@babel/preset-env": "^7.27.2",
    "@types/aws-lambda": "^8.10.119",
    "@types/jest": "^29.5.14",
    "@types/node": "^18.0.0",
    "babel-jest": "^30.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.4",
    "typescript": "^5.8.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "*.ts",
      "!*.test.ts",
      "!*.d.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
